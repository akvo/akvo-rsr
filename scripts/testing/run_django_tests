#!/bin/bash

cd "`dirname $0`"

# check whether virtualenv_path parameter exists
if [ -z "$1" ]; then
    echo "Usage: run_django_tests <virtualenv_path> [ci_mode]"
    exit -1
fi

VIRTUALENV_PATH=$1

# check whether virtualenv path exists
if [ -r $VIRTUALENV_PATH ]; then
    source $VIRTUALENV_PATH/bin/activate
else
    printf ">> Akvo virtual environment [%s] not found\n" $VIRTUALENV_PATH
    exit -1
fi

python ../deployment/verify_static_project_structure.py $2

# proceed if no error codes returned from last script
if [ $? -eq 0 ]; then
    cd ../../akvo
    printf "\nValidating Django models:\n"
    python manage.py validate
    printf "\nRunning Django tests:\n"
    python manage.py test --noinput rsr
else
    printf "\nUnable to run Django tests due to errors above\n"
fi

deactivate
